{
  "name": "use-railway",
  "version": "0.0.7",
  "description": "useReducer with effects, the elmish way",
  "sideEffects": false,
  "types": "./dist/dts/index.d.ts",
  "main": "./dist/cjs/index.js",
  "module": "./dist/mjs/index.js",
  "react-native": "./dist/mjs/index.js",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "default": "./dist/mjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "type": "module",
  "scripts": {
    "preversion": "npm run lint -- --fix && npm run build && npm run typecheck-test && npm t && npm run type-coverage && npm run update-readme",
    "postversion": "git add . && git commit -am \"lint & docs [skip build]\" || : && git push && git push --tags",
    "build:ts": "tsc -p configs/tsconfig.cjs.json && tsc -p configs/tsconfig.mjs.json && tsc -p configs/tsconfig.dts.json",
    "build": "rm -rf dist && npm run build:ts && echo '{ \"type\": \"commonjs\" }' >> dist/cjs/package.json",
    "lint": "eslint .",
    "test": "jest",
    "typecheck-test": "tsc test/* --noEmit --jsx react --esModuleInterop true --strict true",
    "coverage": "codecov",
    "type-coverage": "type-coverage --detail --strict --ignore-files **/examples/** --ignore-files **/dist/**",
    "update-readme": "replace-in-file '/(release/npm/use-railway/)([^\\)]*)/g' '$1'$npm_new_version README.md --isRegex"
  },
  "keywords": [
    "react",
    "hook",
    "reducer",
    "effect",
    "useReducer",
    "useEffect",
    "elmish",
    "result"
  ],
  "files": [
    "dist",
    "src",
    "test"
  ],
  "author": "iyegoroff <iegoroff@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iyegoroff/use-railway/issues"
  },
  "homepage": "https://github.com/iyegoroff/use-railway#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iyegoroff/use-railway.git"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@testing-library/preact": "^3.2.3",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.0",
    "@types/react": "^18.2.11",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "@welldone-software/why-did-you-render": "iyegoroff/why-did-you-render#prebuilt",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "preact": "^10.15.1",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "replace-in-file": "^7.0.1",
    "ts-railway": "^6.1.1",
    "type-coverage": "^2.26.0",
    "typescript": "^5.1.3",
    "use-pipe-ts": "^2.0.3"
  },
  "peerDependencies": {
    "react": "*",
    "ts-railway": "*"
  },
  "typeCoverage": {
    "atLeast": 100
  },
  "dependencies": {
    "ts-deep-readonly": "^0.0.5"
  }
}
